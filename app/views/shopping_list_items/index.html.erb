<header class="bar-title">
	<%= link_to "Back", item_purchases_path, html_options = {'class' => "navcell-1 left back button"} %>
	<h1 class="title">
		Shopping List
	</h1>
	<a class="navcell-2 right button" >
		 <%= link_to "Add Item", new_shopping_list_item_path %>
	</a>
</header>
<div class="content">
	<div class="shopping-list">
		<% unless @shopping_list_items.nil? %>
		<ul>
		 <% @shopping_list_items.each do |item| %>
		 	<li><%= item.name %></li>
		 <% end %>
		</ul>
		<% else %>
		<p>There are no items on your shopping list.</p>
		<% end %>
	</div>

</div>
<%= render :partial => 'partials/tab_nav' %>
