<header class="bar-title">
  <h1 class="title">Sign up</h1>
</header>

<div class="content">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<form>
  <div class="input-group">
    <div class="input-row">
      <label>Email</label><%= f.email_field :email, :autofocus => true %>
  	</div>

	<div class="input-row">
      <label>Password</label><%= f.password_field :password %>
  	</div>
  
	<div class="input-row">
      <label>Password confirmation</label><%= f.password_field :password_confirmation %>
  	</div>
  </div>
  	<div id = "submission"><%= f.submit "Sign up" %></div>

</form>

<% end %>

<%= render "devise/shared/links" %>

</div>